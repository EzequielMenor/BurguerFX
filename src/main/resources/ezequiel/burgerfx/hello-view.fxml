<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="768.0" prefWidth="800.0" style="-fx-background-color: #f7f3e8;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ezequiel.burgerfx.HelloController">
    <children>
        <Label alignment="CENTER" layoutX="309.0" layoutY="14.0" style="-fx-text-fill: #b33939;" text="Burger del Mes" textAlignment="CENTER">
            <font>
                <Font name="Impact" size="26.0" />
            </font>
        </Label>

        <!-- Campos de texto -->
        <Label layoutX="232.0" layoutY="84.0" text="Nombre de la Burger:">
            <font>
                <Font name="Segoe UI Semibold" size="14.0" />
            </font>
        </Label>
        <TextField fx:id="txtNombre" layoutX="422.0" layoutY="80.0" promptText="Nombre" />

        <Label layoutX="232.0" layoutY="114.0" text="Hamburguesas Disponibles">
            <font>
                <Font name="Segoe UI Semibold" size="14.0" />
            </font>
        </Label>
        <TextField fx:id="txtDisponible" layoutX="422.0" layoutY="110.0" promptText="Hamburguesas Disponibles" />

        <Label layoutX="232.0" layoutY="145.0" text="Precio Hamburguesa">
            <font>
                <Font name="Segoe UI Semibold" size="14.0" />
            </font>
        </Label>
        <TextField fx:id="txtPrecioBurguer" layoutX="422.0" layoutY="142.0" promptText="Precio Hamburguesa" />

        <Label layoutX="233.0" layoutY="180.0" text="Nº Clientes">
            <font>
                <Font name="Segoe UI Semibold" size="14.0" />
            </font>
        </Label>
        <TextField fx:id="txtNClientes" layoutX="422.0" layoutY="176.0" promptText="Nº Personas" />

        <Button alignment="CENTER" contentDisplay="CENTER" layoutX="238.0" layoutY="226.0" mnemonicParsing="false" onAction="#guardarReserva" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8px;" text="Guardar Burger" textAlignment="CENTER">
            <font>
                <Font name="Segoe UI Semibold" size="14.0" />
            </font>
        </Button>

        <Button alignment="CENTER" contentDisplay="CENTER" layoutX="439.0" layoutY="226.0" mnemonicParsing="false" onAction="#iniciarSimulacion" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8px;" text="Iniciar Simulación" textAlignment="CENTER">
            <font>
                <Font name="Segoe UI Semibold" size="14.0" />
            </font>
        </Button>

        <TextArea fx:id="txtResumen" editable="false" layoutX="40.0" layoutY="273.0" prefHeight="443.0" prefWidth="720.0" style="-fx-control-inner-background: #eeeeee; -fx-font-family: 'Consolas', monospace;" wrapText="true" />

        <Button fx:id="btnListaEspera" alignment="CENTER" contentDisplay="CENTER" layoutX="299.0" layoutY="726.0" mnemonicParsing="false" onAction="#verListaEspera" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8px;" text="Ver Lista de Espera (Incidentes)" textAlignment="CENTER">
            <font>
                <Font name="Segoe UI Semibold" size="14.0" />
            </font>
        </Button>

    </children>
</AnchorPane>
